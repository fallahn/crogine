{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "build/${presetName}",
      "cacheVariables": {
        "BUILD_SAMPLES": true,
        "CMAKE_INSTALL_PREFIX": "install/${presetName}"
      }
    },
    {
      "name": "vcpkg",
      "inherits": [ "default" ],
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ]
}